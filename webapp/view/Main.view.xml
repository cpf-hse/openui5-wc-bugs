<mvc:View controllerName="com.myorg.myapp.controller.Main" displayBlock="true"
	xmlns="sap.ui.webc.main"
	xmlns:fiori="sap.ui.webc.fiori"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">

	<fiori:Page>
		<fiori:content>
			<Button text="{i18n>createSupplier}" click="openDialog"/>
			<Dialog id="helloDialog" resizable="true" draggable="true" headerText="Register Form">
				<m:FlexBox direction="Column" alignItems="Start">
					<Label for="username" showColon="true" text="Username" />
					<Input id="username" placeholder="Enter username" />
					<Label for="password" showColon="true" text="Password" />
					<Input id="password" type="Password" placeholder="Enter password" valueState="Error" />
					<Label for="email" showColon="true" text="Email" />
					<Input id="email" placeholder="Enter e-mail" />
				</m:FlexBox>
				<footer>
					<Button design="Emphasized" click=".handleClose" text="Register" class="sapUiTinyMarginTop sapUiTinyMarginBottom" />
				</footer>
			</Dialog>
		</fiori:content>
	</fiori:Page>
</mvc:View>
